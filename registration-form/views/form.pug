extends layout

block content
    h1 Register to subscribe 
    form(action="." method="POST" class="form-registration")
        label(for="name") Name:
        br
        input(
            type="text"
            id="name"
            name="name"
            class="form-control"
            value=data.name

        )
        br
        br
        label(for="email") Email:
        br
        input(
            type="email"
            id="email"
            name="email"
            class="form-control"
            value=data.email
        )
        br
        br
        label(for="username") Username:
        br
        input(
            type="text"
            id="username"
            name="username"
            class="form-control"
            value=data.username
        )
        br
        br
        label(for="password") Password:
        br
        input(
            type="password"
            id="password"
            name="password"
            class="form-control"
            value=data.password
        )
        button.submit-button Register